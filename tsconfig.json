{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "baseUrl": ".",
    "paths": {
      "logbooks-lib": ["./packages/logbooks-lib/src/index.ts"],
      "logbooks-lib/*": ["./packages/logbooks-lib/src/*"],
      "logbooks-cli": ["./packages/logbooks-cli/src/index.ts"],
      "logbooks-cli/*": ["./packages/logbooks-cli/src/*"],
      "logbooks-mcp": ["./packages/logbooks-mcp/src/index.ts"],
      "logbooks-mcp/*": ["./packages/logbooks-mcp/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**",
    "**/vitest.config.ts",
    "**/drizzle.config.ts"
  ],
  "include": ["packages/*/src/**/*", "vitest.setup.ts", "vitest.config.ts", "basecamp/*.ts", "scripts/*.ts", "setup-cli.ts"],
  "references": [
    { "path": "./basecamp" },
    { "path": "./packages/logbooks-lib" },
    { "path": "./packages/logbooks-cli" },
    { "path": "./packages/logbooks-mcp" }
  ]
}
